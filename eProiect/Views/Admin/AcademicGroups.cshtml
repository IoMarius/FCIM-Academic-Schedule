@model  eProiect.Models.ViewModels.GeneralViewData
@{
     ViewBag.Title = "AcademicGroups";
     Layout = "~/Views/Shared/_Layout _Admin.cshtml";
}


<div class="page-header card">
     <div class="row align-items-end">
          <div class="col-lg-8">
               <div class="page-header-title">
                    <i class="icofont icofont-group-students bg-c-blue"></i>
                    <div class="d-inline">
                         <h4>Show all Academic Groups</h4>
                         <span>
                              This page is for etiting and removing academic groups.
                         </span>
                    </div>
               </div>
          </div>
          <div class="col-lg-4">
               <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                         <li class="breadcrumb-item">
                              <a href="@Url.Action("Schedule", "Home")">
                                   <i class="icofont icofont-home"></i>
                              </a>
                         </li>
                         <li class="breadcrumb-item">
                              <a href="@Url.Action("AcademicGroups", "Admin")">Academic Groups</a>
                         </li>

                    </ul>
               </div>
          </div>
     </div>
</div>
<div class="card">
     <div class="card-header">
          
               <a href="@Url.Action("AddAcademicGroup", "Admin")" class="btn btn-primary waves-effect waves-light add">
                    Add Academic Group
               </a>
      
     </div>
     <div class="card-block">

          <div id="static-div-users">
               <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="example-2">
                         <thead>
                              <tr>
                                   <th>#</th>
                                   <th>Name</th>
                                   <th>Year</th>

                              </tr>
                         </thead>
                         <tbody>
                              @{
                                   @Html.AntiForgeryToken()

                                   foreach (var academicGroup in @Model.AcademicGroupsDataList.AcademicGroups)
                                   {

                                        <tr name=@academicGroup.Id>
                                             <th scope="row">@academicGroup.Id</th>
                                             <td class="tabledit-view-mode">
                                                  <span class="tabledit-span">@academicGroup.Name</span>
                                                  <input class="tabledit-input form-control input-sm" type="text" name="Name" value="@academicGroup.Name">
                                             </td>
                                             <td class="tabledit-view-mode">
                                                  <span class="tabledit-span">@academicGroup.Year</span>
                                                  <input class="tabledit-input form-control input-sm" type="text" name="Year" value="@academicGroup.Year">
                                             </td>
                                        </tr>
                                   }
                              }
                         </tbody>
                    </table>
               </div>
          </div>
     </div>
</div>