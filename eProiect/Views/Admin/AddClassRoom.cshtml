@model  eProiect.Models.ViewModels.GeneralViewData
@using eProiect.Domain.Entities.User;

@{
     ViewBag.Title = "AddUserPage";
     Layout = "~/Views/Shared/_Layout _Admin.cshtml";
}

<div class="page-header card">
     <div class="row align-items-end">
          <div class="col-lg-8">
               <div class="page-header-title">
                    <i class="icofont icofont-clip-board bg-c-blue"></i>
                    <div class="d-inline">
                         <h4>Add Classroom Form</h4>
                         <span>
                              This form is for adding classroom.
                         </span>
                    </div>
               </div>
          </div>
          <div class="col-lg-4">
               <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                         <li class="breadcrumb-item">
                              <a href="@Url.Action("Schedule", "Home")">
                                   <i class="icofont icofont-home"></i>
                              </a>
                         </li>
                         <li class="breadcrumb-item">
                              <a href="@Url.Action("ClassRooms", "Admin")">Classrooms</a>
                         </li>
                         <li class="breadcrumb-item">
                              <a href="@Url.Action("AddClassRoom", "Admin")"> Add Classroom</a>
                         </li>
                    </ul>
               </div>
          </div>
     </div>
</div>
<div class="page-body">

     <div class="row">
          <div class="col-sm-12">
               <!-- Post comment card start -->
               <div class="card">
                   @* <div class="card-header">
                         <h5>Post Your Comment Here</h5>
                         <span>lorem ipsum dolor sit amet, consectetur adipisicing elit</span>
                         <div class="card-header-right"> <i class="icofont icofont-spinner-alt-5"></i> </div>
                    </div>*@
                    <div class="card-block">
                         <div class="j-wrapper j-wrapper-640">
                              <div class="j-pro" id="j-pro">
                                   <div class="j-content">
                                        <!-- start name -->
                                        <div class="j-row">
                                             <div class="j-span6 j-unit">
                                                  <div class="j-input">
                                                       <label class="j-icon-left" for="classRoomName">
                                                            <i class="icofont icofont-building"></i>
                                                       </label>
                                                       <input type="text" id="classRoomName" name="classRoomName" placeholder="Classroom Name" class="name-group">
                                                  </div>
                                             </div>
                                             <div class="j-span6 j-unit">
                                                  <div class="j-input">
                                                       <label class="j-icon-right" for="classRoomFloor">
                                                            <i class="icofont icofont-university"></i>
                                                       </label>
                                                       <select id="classRoomFloor" name="select" class="form-control form-control-default" placeholder="Name" style="height:48px">
                                                            <option value="opt1">Select Floor</option>
                                                            <option value="0">0</option>
                                                            <option value="1">1</option>
                                                            <option value="2">2</option>
                                                            <option value="3">3</option>
                                                            <option value="4">4</option>
                                                            <option value="5">5</option>
                                                            <option value="6">6</option>
                                                            <option value="7">7</option>
                                                            <option value="8">8</option>
                                                            <option value="9">9</option>
                                                            <option value="10">10</option>
                                                            <option value="11">11</option>
                                                            <option value="12">12</option>
                                                       </select>
                                                  </div>
                                             </div>
                                        </div>
                                        <!-- end name -->
                                        <!-- start  -->

                                        <div class="j-row">
                                             <span class="j-error-message" id="error_span" style="align-content: center;height: 48px; display: none; margin: 0px 10px 25px;"></span>
                                        </div>

                                        <!-- end  -->
                                        <!-- start response from server -->
                                        
                                        <!-- end response from server -->
                                   </div>
                                   <!-- end /.content -->
                                   <div class="j-footer">
                                        <button id="submit" class="btn btn-primary" onclick="send_classRoom()">Add Classroom</button>
                                   </div>
                                   <!-- end /.footer -->
                              </div>
                         </div>
                    </div>
               </div>
               <!-- Post comment card end -->
          </div>
     </div>
</div>
