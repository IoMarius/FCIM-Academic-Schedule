@model  eProiect.Models.ViewModels.GeneralViewData
@{
     ViewBag.Title = "ClassRooms";
     Layout = "~/Views/Shared/_Layout _Admin.cshtml";
}


<div class="page-header card">
     <div class="row align-items-end">
          <div class="col-lg-8">
               <div class="page-header-title">
                    <i class="icofont icofont-building bg-c-blue"></i>
                    <div class="d-inline">
                         <h4>Show all Classroom</h4>
                         <span>
                              This page is for etiting and removing academic classroom.
                         </span>
                    </div>
               </div>
          </div>
          <div class="col-lg-4">
               <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                         <li class="breadcrumb-item">
                              <a href="@Url.Action("Schedule", "Home")">
                                   <i class="icofont icofont-home"></i>
                              </a>
                         </li>
                         <li class="breadcrumb-item">
                              <a href="@Url.Action("ClassRooms", "Admin")">Classroom</a>
                         </li>

                    </ul>
               </div>
          </div>
     </div>
</div>
<div class="card">
     <div class="card-header">
          
        
               <a href="@Url.Action("AddClassRoom", "Admin")" class="btn btn-primary waves-effect waves-light add">
                    Add Classroom
               </a>
        
     </div>
     <div class="card-block">

          <div id="static-div-users">
               <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="example-2">

                         <thead>
                              <tr>
                                   <th scope="col">#</th>
                                   <th scope="col">ClassRoom Name</th>
                                   <th scope="col">Floor</th>

                              </tr>
                         </thead>
                         <tbody>
                              @{

                                   foreach (var classRoom in @Model.CassRoomsDataList.CassRooms)
                                   {

                                        <tr name=@classRoom.Id>
                                             <th scope="row">@classRoom.Id</th>
                                             <td class="tabledit-view-mode">
                                                  <span class="tabledit-span">@classRoom.ClassroomName</span>
                                                  <input class="tabledit-input form-control input-sm" type="text" name="Name" value="@classRoom.ClassroomName">
                                             </td>
                                             <td class="tabledit-view-mode">
                                                  <span class="tabledit-span">@classRoom.Floor</span>
                                                  <input class="tabledit-input form-control input-sm" type="text" name="Floor" value="@classRoom.Floor">
                                             </td>

                                        </tr>
                                   }

                              }

                         </tbody>

                    </table>
               </div>
          </div>
     </div>
</div>

