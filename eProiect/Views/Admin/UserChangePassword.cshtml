
@{
    ViewBag.Title = "UserChangePassword";
    Layout = "~/Views/Shared/_Layout _Admin.cshtml";
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="icofont icofont-justify-all bg-c-green"></i>
                <div class="d-inline">
                    <h4>Schimba parola contului</h4>
                    <span>Schimbarea Parolei</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Schedule", "Home")">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">Schimbarea Parolei</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="card">

    <div class="card-block">

        <div class="auth-box" id="codeBox" style="display: block;">
            <div class="row m-b-20">
                <div class="col-md-12">
                    <h3 class="text-left">Schimbă Parola </h3>
                </div>
            </div>

            <div class="input-group">
                <input type="password" id="oldPassword" class="form-control" placeholder="Parola vechie">
                <span class="md-line"></span>
            </div>
            <div class="input-group">
                <input type="password" id="newPassword" class="form-control" placeholder="Parola nouă">
                <span class="md-line"></span>
            </div>
            <div class="input-group">
                <input type="password" id="newConfirmPassword" class="form-control" placeholder="Confirmă parola">
                <span class="md-line"></span>
            </div>
            <div class="j-row">
                <span class="j-error-message" id="errorspanpass" style="align-content: center;height: 48px; display: none; margin: 0px 10px 25px;"></span>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20" onclick="sendChangeUserPassword()">Salvează</button>
                </div>
            </div>
        </div>
    </div>
</div>
