@model  eProiect.Models.ViewModels.GeneralViewData
@using eProiect.Domain.Entities.User;

@{
     ViewBag.Title = "Users";
     Layout = "~/Views/Shared/_Layout _Admin.cshtml";
}

<div class="page-header card">
     <div class="row align-items-end">
          <div class="col-lg-8">
               <div class="page-header-title">
                    <i class="icofont icofont-users-social bg-c-blue"></i>
                    <div class="d-inline">
                         <h4>Show all Users</h4>
                         <span>
                              This page is for etiting and removing users.
                         </span>
                    </div>
               </div>
          </div>
          <div class="col-lg-4">
               <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                         <li class="breadcrumb-item">
                              <a href="@Url.Action("Schedule", "Home")">
                                   <i class="icofont icofont-home"></i>
                              </a>
                         </li>
                         <li class="breadcrumb-item">
                              <a href="@Url.Action("Users", "Admin")">Users</a>
                         </li>
                        
                    </ul>
               </div>
          </div>
     </div>
</div>
<div class="card">
     <div class="card-header">    
               <a href="@Url.Action("AddUser", "Admin")" class="btn btn-primary waves-effect waves-light add">
                    Add User
               </a> 
     </div>
     <div class="card-block">

          <div id="static-div-users">
               <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="example-2">


                         <thead>
                              <tr>
                                   <th>#</th>
                                   <th>Name</th>
                                   <th>Surname</th>
                                   <th>Email</th>
                                   <th>Role</th>
                              </tr>
                         </thead>
                         <tbody>
                              @{

                                   foreach (var user in @Model.UDataList)
                                   {

                                        <tr name=@user.Id>
                                             <th scope="row">@user.Id </th>
                                             <td class="tabledit-view-mode">
                                                  <span class="tabledit-span ">@user.Name</span>
                                                  <input class="tabledit-input form-control input-sm testt" type="text">
                                             </td>
                                             <td class="tabledit-view-mode">
                                                  <span class="tabledit-span">@user.Surname</span>
                                                  <input class="tabledit-input form-control input-sm" type="text">
                                             </td>
                                             <td class="tabledit-view-mode">
                                                  <span class="tabledit-span">@user.Email</span>
                                                  <input class="tabledit-input form-control input-sm" type="text">
                                             </td>
                                             <td class="tabledit-view-mode">
                                                  <span class="tabledit-span">@user.Level</span>
                                                  <select class="tabledit-input form-control input-sm" name="Role" disabled="" style="display:none;">
                                                       <option value=@user.Level selected>@user.Level</option>
                                                       <option value="0">@UserRole.guest</option>
                                                       <option value="1">@UserRole.teacher</option>
                                                       <option value="2">@UserRole.admin</option>
                                                  </select>
                                             </td>

                                        </tr>
                                   }

                              }

                         </tbody>
                    </table>
               </div>
          </div>
     </div>
</div>



