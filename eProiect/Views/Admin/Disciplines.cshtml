@model  eProiect.Models.ViewModels.GeneralViewData
@{
     ViewBag.Title = "Disciplines";
     Layout = "~/Views/Shared/_Layout _Admin.cshtml";
}




<div class="page-header card">
     <div class="row align-items-end">
          <div class="col-lg-8">
               <div class="page-header-title">
                    <i class="icofont icofont-book-alt bg-c-blue"></i>
                    <div class="d-inline">
                         <h4>Show all Disciplines</h4>
                         <span>
                              This page is for etiting and removing disciplines.
                         </span>
                    </div>
               </div>
          </div>
          <div class="col-lg-4">
               <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                         <li class="breadcrumb-item">
                              <a href="@Url.Action("Schedule", "Home")">
                                   <i class="icofont icofont-home"></i>
                              </a>
                         </li>
                         <li class="breadcrumb-item">
                              <a href="@Url.Action("Disciplines", "Admin")">Disciplines</a>
                         </li>

                    </ul>
               </div>
          </div>
     </div>
</div>
<div class="card">
     <div class="card-header">
          
         
               <a href="@Url.Action("AddDiscipline", "Admin")" class="btn btn-primary waves-effect waves-light add">
                    Add Discipline
               </a>
        
     </div>
     <div class="card-block">

          <div id="static-div-users">
               <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="example-2">

                         <thead>
                              <tr>
                                   <th>#</th>
                                   <th>Name</th>
                                   <th>ShortName</th>

                              </tr>
                         </thead>
                         <tbody>
                              @{

                                   foreach (var discipline in @Model.DisciplinesDataList.Disciplines)
                                   {

                                        <tr name=@discipline.Id>
                                             <th scope="row">@discipline.Id</th>
                                             <td class="tabledit-view-mode">
                                                  <span class="tabledit-span">@discipline.Name</span>
                                                  <input class="tabledit-input form-control input-sm" type="text" name="Name" value="@discipline.Name">
                                             </td>
                                             <td class="tabledit-view-mode">
                                                  <span class="tabledit-span">@discipline.ShortName</span>
                                                  <input class="tabledit-input form-control input-sm" type="text" name="ShortName" value="@discipline.ShortName">
                                             </td>
                                        </tr>
                                   }

                              }

                         </tbody>
                    </table>
               </div>
          </div>
     </div>
</div>