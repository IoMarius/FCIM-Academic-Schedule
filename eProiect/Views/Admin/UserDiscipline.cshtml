                            <th style="width:30%">Profesor</th>
                            <th>Disciplina</th>
                            <th>Tip disciplina</th>

                        </tr>
                    </thead>
                    <tbody id="tbody-UserDiscipline">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

