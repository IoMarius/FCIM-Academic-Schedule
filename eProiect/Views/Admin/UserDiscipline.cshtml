        <button type="button" onclick="addNewUserToDiscipline()" class="btn btn-primary m-b-0 btn-primary waves-effect waves-light add">Add New User to Discipline</button>


    </div>
    <div class="card-block">

        <div id="static-div-users">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="userDiscipline-Table">

                    <thead>
                        <tr>
