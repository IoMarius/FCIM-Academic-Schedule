
@{
    ViewBag.Title = "LoginError";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}


<!-- Container-fluid starts -->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <!-- Authentication card start -->
            <div class="login-card card-block auth-body mr-auto ml-auto">
                <form class="md-float-material">

                    <div class="auth-box">
                        <div class="row m-b-20">
                            <div class="col-md-12">
                                <h3 class="text-left">Recover you password</h3>
                            </div>
                        </div>
                        <p class="text-inverse b-b-default text-right">Back to <a href="@Url.Action("Login", "Login")">Login.</a></p>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Your Email Address">
                            <span class="md-line"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <button type="button" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">Reset Password</button>
                            </div>
                        </div>

                    </div>
                </form>
                <!-- end of form -->
            </div>
            <!-- Authentication card end -->
        </div>
        <!-- end of col-sm-12 -->
    </div>
    <!-- end of row -->
</div>
<!-- end of container-fluid -->